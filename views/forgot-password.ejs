<%- include('./partials/header') %>

<div class="flex items-center justify-center mt-14 h-90vh">
  <div class="w-[400px] h-[400px] bg-gray-800 rounded-lg shadow-md flex justify-center items-center">
    <form class="space-y-4 w-full max-w-md" autocomplete="off" action="/forgot-password" method="post">
      <h4 class="text-2xl mb-5 text-white text-center">Forgot Your Password?</h4>
      <div class="flex flex-col items-center">
        
        <div class="w-3/4">
          <h5 class="text-gray-300">Email</h5>
          <input class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-200 rounded-md mb-3" type="email" placeholder="Email" name="email" required>
        </div>
        <div class="w-3/4 flex justify-between">
          <input class="px-4 py-2 w-full rounded-full bg-blue-500 text-white text-center mb-2 mt-3" type="submit" value="Reset Password">
        </div>
        <div class="w-3/4 text-center mt-3">
          <span class="text-white">Remembered your password? <a href="/users/login" class="text-blue-400 hover:text-blue-200">Login</a></span>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>